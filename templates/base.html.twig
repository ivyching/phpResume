                    setTimeout(function () {
                        var name = $(this).attr('class');
                        var tab = $('div.' + name);
                        var all = tab.find('textarea');

                        if (name == 'tabAll') {
                            all = $('div.tab-content').find('textarea');
                        }

                        all.each(function (index, element) {
                            if ($(this).attr('scrollFlag') != 'true') {
                                var height = $(this).get(0).scrollHeight;

                                if ($(this).val().trim().length < 1) {
                                    height = 48;
                                }

                                $(this).attr('scrollFlag', 'true')
                                $(this).height(height);
                            }
                        })
                    }.bind(this), 300)
                });
            });

